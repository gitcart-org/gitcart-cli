<footer class="site-footer bg-gray-50 dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700 mt-16">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="footer-section">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">{{ site.name }}</h3>
        <p class="text-gray-600 dark:text-gray-400 mb-4">
          {{ site.description | default: 'Kvalitní produkty za skvělé ceny. Rychlá doprava, spolehlivý servis.' | t: current_language }}
        </p>
        
        {% if contact.phone or contact.email %}
          <div class="space-y-2">
            {% if contact.phone %}
              <div class="flex items-center text-gray-600 dark:text-gray-400">
                <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <a href="tel:{{ contact.phone }}" class="hover:text-blue-600 dark:hover:text-blue-400">{{ contact.phone }}</a>
              </div>
            {% endif %}
            {% if contact.email %}
              <div class="flex items-center text-gray-600 dark:text-gray-400">
                <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <a href="mailto:{{ contact.email }}" class="hover:text-blue-600 dark:hover:text-blue-400">{{ contact.email }}</a>
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>
      
      <!-- Navigation Links -->
      <div class="footer-section">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">{{ 'Navigation' | t: current_language }}</h3>
        <ul class="space-y-2">
          {% for link in navigation.footer.left %}
            <li>
              <a href="{{ link.url }}" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
      
      <!-- Customer Service -->
      <div class="footer-section">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">{{ 'Customer Service' | t: current_language }}</h3>
        <ul class="space-y-2">
          {% for link in navigation.footer.right %}
            <li>
              <a href="{{ link.url }}" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
      
      <!-- Social Media & Newsletter -->
      <div class="footer-section">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">{{ 'Follow Us' | t: current_language }}</h3>
        
        {% if social %}
          <div class="flex space-x-4 mb-6">
            {% if social.facebook %}
              <a href="{{ social.facebook }}" 
                 class="text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                 aria-label="Facebook">
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                </svg>
              </a>
            {% endif %}
            {% if social.instagram %}
              <a href="https://instagram.com/{{ social.instagram | remove: '@' }}" 
                 class="text-gray-400 hover:text-pink-600 dark:hover:text-pink-400 transition-colors"
                 aria-label="Instagram">
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.618 5.367 11.986 11.988 11.986s11.987-5.368 11.987-11.986C24.014 5.367 18.635.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.33-1.297S3.823 14.18 3.823 12.9c0-1.279.49-2.448 1.296-3.329s2.033-1.297 3.33-1.297c1.296 0 2.447.49 3.329 1.297S12.894 11.621 12.894 12.9c0 1.28-.49 2.448-1.296 3.33s-2.033 1.296-3.33 1.296l.001.462zm7.429-11.078h-3.714V4.052h3.714v1.858z"/>
                </svg>
              </a>
            {% endif %}
            {% if social.twitter %}
              <a href="{{ social.twitter }}" 
                 class="text-gray-400 hover:text-blue-400 transition-colors"
                 aria-label="Twitter">
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
            {% endif %}
          </div>
        {% endif %}
        
        <div id="zone-newsletter-signup"></div>
      </div>
    </div>
    
    <div class="border-t border-gray-200 dark:border-gray-700 mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="text-gray-600 dark:text-gray-400 text-sm mb-4 md:mb-0">
          © {{ 'now' | date: '%Y' }} {{ site.name }}. {{ 'All rights reserved.' | t: current_language }}
        </div>
        
        <div class="flex items-center space-x-4 text-sm text-gray-600 dark:text-gray-400">
          {% if site.languages.size > 1 %}
            <div class="flex items-center space-x-2">
              <span>{{ 'Language' | t: current_language }}:</span>
              {% for lang_code, language in site.languages %}
                {% if lang_code == current_language %}
                  <span class="font-medium">{{ language.name }}</span>
                {% else %}
                  <a href="{{ page.url | url: lang_code }}" class="hover:text-blue-600 dark:hover:text-blue-400">{{ language.name }}</a>
                {% endif %}
                {% unless forloop.last %} | {% endunless %}
              {% endfor %}
            </div>
          {% endif %}
          
          <div class="text-xs">
            {{ 'Powered by' | t: current_language }} 
            <a href="https://gitcart.dev" class="hover:text-blue-600 dark:hover:text-blue-400">GitCart</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div id="zone-after-footer"></div>
</footer>