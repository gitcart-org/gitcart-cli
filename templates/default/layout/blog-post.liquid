<div class="blog-post-page">
    <div class="container">
        <!-- Blog Post Navigation -->
        <nav class="post-nav">
            <a href="{{ 'blog' | section_url: current_language }}" class="back-to-blog">
                ← {{ 'Back to Blog' | t: current_language }}
            </a>
        </nav>
        
        <!-- Post Header -->
        <header class="post-header">
            {% if post.image %}
            <div class="post-featured-image">
                <img src="{{ post.image | img_url: 'xlarge' }}" alt="{{ post.title }}" loading="eager">
            </div>
            {% endif %}
            
            <div class="post-meta">
                <time datetime="{{ post.date | date: '%Y-%m-%d' }}" class="post-date">
                    {{ post.date | date: '%B %d, %Y' }}
                </time>
                <span class="meta-separator">•</span>
                <span class="post-author">{{ 'By' | t: current_language }} {{ post.author }}</span>
                {% if post.category %}
                <span class="meta-separator">•</span>
                <a href="{{ '/blog/category/' | append: post.category | url: current_language }}"
                   class="post-category">{{ post.category | replace: '-', ' ' | capitalize }}</a>
                {% endif %}
            </div>
            
            <h1 class="post-title">{{ post.title }}</h1>
            
            {% if post.excerpt and post.excerpt != '' %}
            <p class="post-excerpt">{{ post.excerpt }}</p>
            {% endif %}
            
            {% if post.tags.size > 0 %}
            <div class="post-tags">
                {% for tag in post.tags %}
                <span class="tag">#{{ tag }}</span>
                {% endfor %}
            </div>
            {% endif %}
        </header>
        
        <!-- Post Content -->
        <div class="post-content-wrapper">
            <article class="post-content">
                {{ content }}
            </article>
            
            <!-- Post Footer -->
            <footer class="post-footer">
                <!-- Share buttons -->
                <div class="post-share">
                    <h4>{{ 'Share this post' | t: current_language }}</h4>
                    <div class="share-buttons">
                        <a href="https://twitter.com/intent/tweet?text={{ post.title | url_encode }}&url={{ site.url }}{{ post.url | url: current_language }}"
                           target="_blank" rel="noopener" class="share-btn twitter">
                            Twitter
                        </a>
                        <a href="https://www.facebook.com/sharer/sharer.php?u={{ site.url }}{{ post.url | url: current_language }}"
                           target="_blank" rel="noopener" class="share-btn facebook">
                            Facebook
                        </a>
                        <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ site.url }}{{ post.url | url: current_language }}"
                           target="_blank" rel="noopener" class="share-btn linkedin">
                            LinkedIn
                        </a>
                        <a href="mailto:?subject={{ post.title | url_encode }}&body={{ post.excerpt | url_encode }}%0A%0A{{ site.url }}{{ post.url | url: current_language }}"
                           class="share-btn email">
                            Email
                        </a>
                    </div>
                </div>
                
                <!-- Author info -->
                {% if post.author and post.author != 'Admin' %}
                <div class="author-info">
                    <h4>{{ 'About the Author' | t: current_language }}</h4>
                    <div class="author-card">
                        <div class="author-details">
                            <h5>{{ post.author }}</h5>
                            <!-- You can extend this with author bio, avatar etc. -->
                        </div>
                    </div>
                </div>
                {% endif %}
            </footer>
        </div>
        
        <!-- Related Posts -->
        {% if related_posts.size > 0 %}
        <section class="related-posts">
            <h3>{{ 'Related Posts' | t: current_language }}</h3>
            <div class="related-posts-grid">
                {% for related_post in related_posts %}
                <article class="related-post-card">
                    {% if related_post.image %}
                    <div class="related-post-image">
                        <a href="{{ related_post.url | url: current_language }}">
                            <img src="{{ related_post.image | img_url: 'small' }}" alt="{{ related_post.title }}" loading="lazy">
                        </a>
                    </div>
                    {% endif %}
                    
                    <div class="related-post-content">
                        <div class="related-post-meta">
                            <time datetime="{{ related_post.date | date: '%Y-%m-%d' }}">
                                {{ related_post.date | date: '%b %d' }}
                            </time>
                            {% if related_post.category %}
                            <span class="meta-separator">•</span>
                            <span class="related-post-category">{{ related_post.category | replace: '-', ' ' | capitalize }}</span>
                            {% endif %}
                        </div>
                        
                        <h4 class="related-post-title">
                            <a href="{{ related_post.url | url: current_language }}">{{ related_post.title }}</a>
                        </h4>
                        
                        <p class="related-post-excerpt">{{ related_post.excerpt | truncate_words: 15 }}</p>
                    </div>
                </article>
                {% endfor %}
            </div>
        </section>
        {% endif %}
        
        <!-- Post Navigation -->
        <nav class="post-pagination">
            <div class="post-pagination-inner">
                {% comment %}
                <!-- Previous/Next post navigation can be implemented here -->
                <!-- This would require additional logic in the Builder to provide prev/next posts -->
                {% endcomment %}
                
                <a href="{{ 'blog' | section_url: current_language }}" class="btn btn-outline">
                    {{ 'Back to All Posts' | t: current_language }}
                </a>
            </div>
        </nav>
    </div>
</div>