<div class="space-y-16">
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-blue-600 to-blue-800 dark:from-blue-800 dark:to-blue-950 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 text-center">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4">{{ site.name }}</h1>
            <p class="text-lg md:text-xl mb-8 opacity-90 max-w-2xl mx-auto">{{ site.description }}</p>
            <a href="{{ '/products' | url: current_language }}" class="inline-block bg-white text-blue-600 hover:bg-gray-100 font-semibold py-3 px-8 rounded-lg transition-colors">
                {{ 'Shop Now' | t: current_language }}
            </a>
        </div>
    </section>
    
    <!-- Featured Categories -->
    {% assign featured_categories = categories | where: 'featured', true %}
    {% if featured_categories.size > 0 %}
    <section>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">{{ 'Featured Categories' | t: current_language }}</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for category in featured_categories limit: 6 %}
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow group">
                    {% if category.metadata.image %}
                    <div class="aspect-w-16 aspect-h-9 overflow-hidden">
                        <img src="{{ category.metadata.image | img_url: 'medium' }}" alt="{{ category.metadata.title }}" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300">
                    </div>
                    {% endif %}
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">{{ category.metadata.title }}</h3>
                        <p class="text-gray-600 dark:text-gray-400 mb-4">{{ category.metadata.description | truncate_words: 20 }}</p>
                        <a href="{{ category.url | url: current_language }}" class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-medium">
                            {{ 'View Products' | t: current_language }} ({{ category.totalProductCount }})
                            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}
    
    <!-- Featured Products -->
    {% assign featured_products = all_products | where: 'featured', true %}
    {% if featured_products.size > 0 %}
    <section class="bg-gray-50 dark:bg-gray-900 py-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">{{ 'Featured Products' | t: current_language }}</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                {% for product in featured_products limit: 8 %}
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-all group">
                    {% if product.metadata.images[0] %}
                    <div class="relative overflow-hidden">
                        <img src="{{ product.metadata.images[0] | img_url: 'medium' }}" alt="{{ product.metadata.title }}" class="w-full h-56 object-cover group-hover:scale-105 transition-transform duration-300">
                        {% if product.isOnSale %}
                        <span class="absolute top-2 left-2 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded">-{{ product.discount }}%</span>
                        {% endif %}
                    </div>
                    {% endif %}
                    
                    <div class="p-4">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{{ product.metadata.title }}</h3>
                        <div class="mb-4">
                            {% if product.isOnSale %}
                            <span class="text-xl font-bold text-red-600 dark:text-red-400">{{ product.metadata.sale_price | money: language.currency }}</span>
                            <span class="text-sm text-gray-500 line-through ml-2">{{ product.metadata.price | money: language.currency }}</span>
                            {% else %}
                            <span class="text-xl font-bold text-gray-900 dark:text-white">{{ product.metadata.price | money: language.currency }}</span>
                            {% endif %}
                        </div>
                        <a href="{{ product.url | url: current_language }}" class="block w-full bg-blue-600 hover:bg-blue-700 text-white text-center py-2 px-4 rounded-lg font-medium transition-colors">
                            {{ 'View Details' | t: current_language }}
                        </a>
                    </div>
                </div>
                {% endfor %}
            </div>
            
            <div class="text-center mt-8">
                <a href="{{ '/products' | url: current_language }}" class="inline-block border-2 border-blue-600 dark:border-blue-400 text-blue-600 dark:text-blue-400 hover:bg-blue-600 hover:text-white dark:hover:bg-blue-400 dark:hover:text-gray-900 py-3 px-8 rounded-lg font-medium transition-all">
                    {{ 'View All Products' | t: current_language }}
                </a>
            </div>
        </div>
    </section>
    {% endif %}
    
    <!-- Info Blocks -->
    <section class="py-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                <div class="text-center">
                    <div class="text-4xl mb-4">üì¶</div>
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{{ 'Free Shipping' | t: current_language }}</h3>
                    <p class="text-gray-600 dark:text-gray-400">{{ 'On orders over' | t: current_language }} {{ 1000 | money: language.currency }}</p>
                </div>
                <div class="text-center">
                    <div class="text-4xl mb-4">‚Ü©Ô∏è</div>
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{{ 'Easy Returns' | t: current_language }}</h3>
                    <p class="text-gray-600 dark:text-gray-400">{{ '30 day return policy' | t: current_language }}</p>
                </div>
                <div class="text-center">
                    <div class="text-4xl mb-4">üîí</div>
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{{ 'Secure Payment' | t: current_language }}</h3>
                    <p class="text-gray-600 dark:text-gray-400">{{ '100% secure transactions' | t: current_language }}</p>
                </div>
                <div class="text-center">
                    <div class="text-4xl mb-4">üí¨</div>
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{{ '24/7 Support' | t: current_language }}</h3>
                    <p class="text-gray-600 dark:text-gray-400">{{ 'Contact us anytime' | t: current_language }}</p>
                </div>
            </div>
        </div>
    </section>
</div>