<div class="error-page">
    <div class="container">
        <div class="error-content">
            <h1 class="error-code">404</h1>
            <h2>{{ 'Page Not Found' | t: current_language }}</h2>
            <p>{{ 'The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.' | t: current_language }}</p>
            
            <div class="error-actions">
                <a href="{{ '/' | url: current_language }}" class="btn btn-primary">
                    {{ 'Go to Homepage' | t: current_language }}
                </a>
                <a href="{{ '/products' | url: current_language }}" class="btn btn-secondary">
                    {{ 'Browse Products' | t: current_language }}
                </a>
            </div>
            
            <!-- Popular Categories -->
            {% assign popular_categories = categories | where: 'featured', true | limit: 3 %}
            {% if popular_categories.size > 0 %}
            <div class="popular-categories">
                <h3>{{ 'Popular Categories' | t: current_language }}</h3>
                <div class="category-list">
                    {% for category in popular_categories %}
                    <a href="{{ category.url | url: current_language }}" class="category-link">
                        {{ category.metadata.title }}
                    </a>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
.error-page {
    text-align: center;
    padding: 4rem 0;
}

.error-code {
    font-size: 8rem;
    font-weight: bold;
    color: var(--primary-color);
    margin-bottom: 1rem;
    line-height: 1;
}

.error-content h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--dark-color);
}

.error-content p {
    font-size: 1.125rem;
    color: var(--secondary-color);
    max-width: 600px;
    margin: 0 auto 2rem;
}

.error-actions {
    margin-bottom: 3rem;
}

.error-actions .btn {
    margin: 0 0.5rem;
}

.popular-categories {
    max-width: 400px;
    margin: 0 auto;
}

.popular-categories h3 {
    margin-bottom: 1rem;
}

.category-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.category-link {
    padding: 0.5rem 1rem;
    background-color: var(--light-color);
    border-radius: var(--border-radius);
    transition: var(--transition);
}

.category-link:hover {
    background-color: var(--primary-color);
    color: white;
    text-decoration: none;
}
</style>