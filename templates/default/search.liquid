<div class="search-page">
    <div class="container">
        <h1>{{ 'Search Results' | t: current_language }}</h1>
        
        <!-- Search Form -->
        <div class="search-form">
            <form id="search-form" class="search-box">
                <input type="text" 
                       id="search-input" 
                       placeholder="{{ 'Search products...' | t: current_language }}" 
                       value="{{ search_query }}">
                <button type="submit" class="btn btn-primary">
                    {{ 'Search' | t: current_language }}
                </button>
            </form>
            
            <!-- Filters -->
            <div class="search-filters">
                <div class="filter-group">
                    <label for="category-filter">{{ 'Category' | t: current_language }}:</label>
                    <select id="category-filter">
                        <option value="">{{ 'All Categories' | t: current_language }}</option>
                        {% for category in categories %}
                        <option value="{{ category.id }}">{{ category.metadata.title }}</option>
                        {% endfor %}
                    </select>
                </div>
                
                <div class="filter-group">
                    <label for="price-min">{{ 'Price from' | t: current_language }}:</label>
                    <input type="number" id="price-min" placeholder="0">
                </div>
                
                <div class="filter-group">
                    <label for="price-max">{{ 'Price to' | t: current_language }}:</label>
                    <input type="number" id="price-max" placeholder="999999">
                </div>
                
                <div class="filter-group">
                    <label>
                        <input type="checkbox" id="in-stock-only">
                        {{ 'In stock only' | t: current_language }}
                    </label>
                </div>
                
                <div class="filter-group">
                    <button type="button" id="clear-filters" class="btn btn-secondary">
                        {{ 'Clear Filters' | t: current_language }}
                    </button>
                </div>
            </div>
        </div>
        
        <div id="zone-search-results-before"></div>
        
        <!-- Search Results -->
        <div class="search-results">
            <div class="results-header">
                <div class="results-info">
                    <span id="results-count">0</span> {{ 'results found' | t: current_language }}
                    <span id="search-term"></span>
                </div>
                
                <div class="results-sort">
                    <label for="sort-by">{{ 'Sort by' | t: current_language }}:</label>
                    <select id="sort-by">
                        <option value="relevance">{{ 'Relevance' | t: current_language }}</option>
                        <option value="title-asc">{{ 'Name A-Z' | t: current_language }}</option>
                        <option value="title-desc">{{ 'Name Z-A' | t: current_language }}</option>
                        <option value="price-asc">{{ 'Price Low to High' | t: current_language }}</option>
                        <option value="price-desc">{{ 'Price High to Low' | t: current_language }}</option>
                    </select>
                </div>
            </div>
            
            <div id="search-results-container" class="products-grid">
                <!-- Results will be populated by JavaScript -->
            </div>
            
            <div id="zone-search-results-after"></div>
            
            <div id="no-results" class="no-results" style="display: none;">
                <h3>{{ 'No results found' | t: current_language }}</h3>
                <p>{{ 'Try adjusting your search terms or filters' | t: current_language }}</p>
                
                <!-- Suggestions -->
                <div class="search-suggestions">
                    <h4>{{ 'Popular searches' | t: current_language }}:</h4>
                    <div class="suggestion-tags">
                        <a href="?q=smartphone" class="tag">smartphone</a>
                        <a href="?q=laptop" class="tag">laptop</a>
                        <a href="?q=headphones" class="tag">headphones</a>
                        <a href="?q=tablet" class="tag">tablet</a>
                    </div>
                </div>
            </div>
            
            <div id="search-loading" class="search-loading" style="display: none;">
                <p>{{ 'Searching...' | t: current_language }}</p>
            </div>
        </div>
    </div>
</div>

<!-- Search Result Template -->
<script type="text/template" id="search-result-template">
    <div class="product-card">
        <div class="product-image">
            <a href="{url}">
                <img src="{image}" alt="{title}">
            </a>
            {badges}
        </div>
        <div class="product-info">
            <h3><a href="{url}">{title}</a></h3>
            <p class="product-excerpt">{excerpt}</p>
            <div class="product-price">{price}</div>
            <div class="product-actions">
                {addToCartButton}
            </div>
        </div>
    </div>
</script>

